<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <!-- view background color -->
    <solid android:color="@color/bg_blue" >
    </solid>

    <padding
        android:bottom="1dip"
        android:left="5dip"
        android:right="5dip"
        android:top="1dip" >
    </padding>

    <corners android:radius="15dp" >
    </corners>

    <stroke
        android:width="1dip"
        android:color="@color/bg_blue_dark_shadow" />

    <gradient
        android:angle="270"
        android:endColor="@color/bg_blue_dark_shadow"
        android:startColor="@color/bg_blue_dark_shadow" />

</shape>